{% extends 'base.html.twig' %}

{% set organization = content_get('App\\Model\\Resume\\Organization', item.organization) %}

{#{% block meta_title item.title ~ ' | ' ~ parent() %}#}
{#{% block meta_description item.description %}#}

{#{% block og_image asset(item.image|glide_image_preset('opengraph_image')) %}#}
