{% block main_content %}
<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>{{ organization.name }}</h2>
            <ol>
                <li><a href="{{ path('resume') }}">Resume</a></li>
                <li>{{ organization.name }}</li>
            </ol>
        </div>

    </div>
</section><!-- End Breadcrumbs -->


<!-- ======= Portfolio Details Section ======= -->
<section id="portfolio-details" class="portfolio-details">
    <div class="container">

    <div class="card w-100 mb-3 text-bg-light">
        <div class="row g-0 h-100">
            <div class="col-md-4 align-middle p-5 border-end">
                <div class="d-flex flex-column h-100">
                    <img class="img-fluid rounded-start my-auto" src="{{ organization.logo }}"
                         title="{{ organization.name }}" alt="{{ organization.shortDescription }}">
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-body d-flex flex-column h-100">
                    <h3 class="card-title">{{ item.role }}・<a
                            href="{{ organization.url }}">{{ organization.name }}</a>・{{ organization.place }}
                    </h3>
                    <p class="card-text date">{{ item.startDate | date(site.date_format) }}
                        – {{ item.endDate | date(site.date_format) }}</p>
                    <p class="card-text description">{{ organization.shortDescription }}</p>
                    <p class="card-text role">{{ item.description }}</p>
                    <p class="card-text skills">
                        {% for skill in item.skills %}
                            <span class="badge rounded-pill bg-secondary">#{{ skill }}</span>
                        {% endfor %}
                    </p>
                </div>
            </div>
        </div>
    </div>

    <main class="item">
        <nav>
            <a class="btn btn-sm btn-outline-dark" href="{{ path('resume') }}">← Back to the list</a>
        </nav>

{#        <header>#}
{#            <div class="banner">#}
{#                <img src="{{ item.image|glide_image_preset('item_banner') }}" alt="{{ item.title }}"/>#}
{#            </div>#}
{#            <h1>{{ item.title }}</h1>#}
{#        </header>#}

        <article>
            {{ item.content|raw }}
        </article>
    </main>

    </div>
</section><!-- End Portfolio Details Section -->
{% endblock %}
