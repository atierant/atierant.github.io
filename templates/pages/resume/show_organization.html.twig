{% extends 'base.html.twig' %}

{% block main_content %}
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>{{ organization.name }}</h2>
                <ol>
                    <li><a href="{{ path('resume') }}">{% trans %}Resume{% endtrans %}</a></li>
                    <li>{{ organization.name }}</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <nav>
        <a class="btn btn-sm btn-dark" href="{{ path('resume') }}">← {% trans %}Back to Resume{% endtrans %}</a>
    </nav>
    <!-- ======= Portfolio Details Section ======= -->
    <section>
        <div class="container">
            <div class="card w-100 mb-3 text-bg-light">
                <div class="row g-0 h-100">
                    <div class="col-md-4 align-middle p-5 border-end">
                        <div class="d-flex flex-column h-100">
                            <img class="img-fluid rounded-start my-auto" src="{{ organization.logo }}"
                                 title="{{ organization.name }}" alt="{{ organization.shortDescription }}">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column h-100">
                            <h3 class="card-title">
                                <a href="{{ organization.url }}">{{ organization.name }}</a>・{{ organization.place }}
                            </h3>
                            <p class="card-text mission">{{ organization.content|raw }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->
{% endblock %}
