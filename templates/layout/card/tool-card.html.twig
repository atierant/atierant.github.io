<div class="card w-100 mb-3 text-bg-light">
    <div class="row g-0 h-100">
        <div class="col-md-4 align-middle p-5 border-end">
            <div class="d-flex flex-column h-100">
            <img class="img-fluid rounded-start my-auto" src="{{ tool.logo }}"
                 title="{{ tool.name }}" alt="{{ tool.shortDescription }}">
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-body d-flex flex-column h-100">
                <h3 class="card-title"><a href="{{ tool.url }}">{{ tool.name }}</a></h3>
                <p class="card-text description">{{ tool.shortDescription }}</p>
                <p class="card-text">{{ tool.description }}</p>
                <p class="card-text text-end mt-auto">
                    <a class="btn btn-outline-dark" href="{{ tool.url }}">{% trans %}See more...{% endtrans %}</a>
                </p>
            </div>
        </div>
    </div>
</div>
