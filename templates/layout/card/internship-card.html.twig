{% set organization = content_get('App\\Model\\Resume\\Organization', item.organization) %}
<article class="card w-100 mb-3 text-bg-light">
    <div class="row g-0 h-100">
        <div class="col-md-4 border-end">
            <div class="d-flex flex-column h-100">
                <img class="img-fluid my-auto mx-4" src="{{ organization.logo }}"
                     title="{{ organization.name }}" alt="{{ organization.shortDescription }}">
            </div>
        </div>
        <div class="col-md-8 content">
            <div class="card-body d-flex flex-column h-100">
                <h2 class="article_header">{{ item.role }}・<a
                        href="{{ organization.url }}">{{ organization.name }}</a>・{{ organization.place }}
                </h2>
                <p class="card-text date">{{ item.startDate | date(site.date_format) }}
                    – {{ item.endDate | date(site.date_format) }}</p>
                <p class="card-text description">{{ organization.shortDescription }}</p>
                <p class="card-text role">{{ item.description }}</p>
                <p class="card-text text-end mt-auto">
                    <a class="btn btn-outline-dark" href="{{ item.slug }}">See more...</a>
                </p>
            </div>
        </div>
    </div>
</article>
