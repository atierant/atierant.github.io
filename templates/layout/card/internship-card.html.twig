{% set organization = content_get('App\\Model\\Resume\\Organization', internship.organization) %}
<article class="card w-100 mb-3 text-bg-light">
    <div class="row g-0 h-100">
        <div class="col-md-4 border-end">
            <div class="d-flex flex-column h-100">
                <img class="img-fluid my-auto mx-4" src="{{ organization.logo }}"
                     title="{{ organization.name }}" alt="{{ organization.shortDescription }}">
            </div>
        </div>
        <div class="col-md-8 content">
            <div class="card-body d-flex flex-column h-100">
                <p class="card-text date alert alert-secondary" role="alert">
                    {{ internship.startDate | format_datetime(pattern=site.date_format_ym_pattern) }}
                    → {{ internship.endDate | format_datetime(pattern=site.date_format_ym_pattern) }} ({{ get_duration(internship.startDate,internship.endDate) }})
                </p>
                <h2 class="article_header">{{ internship.role }}・<a
                        href="{{ organization.url }}">{{ organization.name }}</a>・{{ organization.place }}
                </h2>
                <p class="card-text description">{{ organization.shortDescription }}</p>
                <p class="card-text role">{{ internship.description }}</p>
{#                <p class="card-text text-end mt-auto">#}
{#                    <a class="btn btn-outline-dark" href="{{ internship.slug }}">See more...</a>#}
{#                </p>#}
            </div>
        </div>
    </div>
</article>
